<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_translate_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/image_background_red"/>

        <ImageView
            android:id="@+id/image_scale_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/image_background_green"/>

        <ImageView
            android:id="@+id/image_alpha_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/image_background_blue"/>

        <ImageView
            android:id="@+id/image_rotate_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/image_background_yellow"/>

        <ImageView
            android:id="@+id/image_set_object_in_java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:contentDescription="animator set in java code"
            android:background="@drawable/image_background_purple"/>
            <!--android:contentDescription用于视力障碍的用户，便于他们理解控件的作用。
            安装Talkback app后，点击控件，talkback app就会朗读出android:contentDescription的内容-->

        <ImageView
            android:id="@+id/image_set_object_in_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/image_background_gray"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>